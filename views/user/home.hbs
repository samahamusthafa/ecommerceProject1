    <script>
        function addToWishlist(proId) {
            document.getElementById("wishlist-" + proId).innerText = "Wishlisted"
            $.ajax({
                url: '/add-to-wishlist/' + proId,
                data: {
                    product: proId
                },
                method: "post",
                success: (response) => {
                    Swal.fire(response.message)
                },
                error: (err) => {
                    // alert(err.responseJSON.message)
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: err.responseJSON.message

                    })
                }
            })
        }
    </script>
