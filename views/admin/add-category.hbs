      <script>
                function validateForm() {
                  // Get form elements
                  const categoryInput = document.getElementById("category");
                  const imageInput = document.getElementById("image");
                  

                  // Validate category
                  if (categoryInput.value.trim() === "") {
                    categoryInput.classList.add("is-invalid");
                    document.getElementById("categoryHelp").innerHTML = "Please enter a category name.";
                    return false;
                  } else {
                    categoryInput.classList.remove("is-invalid");
                    document.getElementById("categoryHelp").innerHTML = "";
                  }

                  // Validate image
                  const allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;
                  if (!allowedExtensions.exec(imageInput.value)) {
                    imageInput.classList.add("is-invalid");
                    document.getElementById("imageHelp").innerHTML = "Please select a valid image file (JPG, JPEG, PNG, GIF).";
                    return false;
                  } else {
                    imageInput.classList.remove("is-invalid");
                    document.getElementById("imageHelp").innerHTML = "";
                  }

                  // Validate quantity
                  

                  return true;
                }
              </script>

      

      