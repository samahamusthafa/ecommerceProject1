
            <section>

                <div class="container-xxl flex-grow-1 container-p-y">
                    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Coupon/</span> Add Coupon</h4>

                    <!-- Basic Layout & Basic with Icons -->
                    <div class="row">
                        <!-- Basic Layout -->
                        <div class="col-xxl">
                            <div class="card mb-4">
                                <br>
                                <div class="card-body">
                                    <form method="post" action="/admin/add-coupon" class="row g-3 needs-validation"
                                        novalidate>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">Coupon
                                                Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="name"
                                                    id="basic-default-name" placeholder="" required />
                                                <div class="invalid-feedback">Please enter Coupon Name</div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">Coupon
                                                Description</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="description"
                                                    id="basic-default-name" placeholder="" required />
                                                <div class="invalid-feedback">Please Enter Coupon Description</div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">Discount
                                                Percentage</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="discount_percentage"
                                                    id="basic-default-name" placeholder="" required />
                                                <div class="invalid-feedback">Please Enter Discount Percentage</div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">Discount
                                                Minimum Amount</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="min_amount"
                                                    id="basic-default-name" placeholder="" required />
                                                <div class="invalid-feedback">Please Enter Discount Minimum Amount</div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">Discount
                                                Price</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="discountprice"
                                                    id="basic-default-name" placeholder="" required />
                                                <div class="invalid-feedback">Please enter Discount Price</div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">Date</label>
                                            <div class="col-sm-10">
                                                <input type="date" class="form-control" name="date"
                                                    id="basic-default-name" placeholder="" required />
                                                <div class="invalid-feedback">Please Enter Expiry Date</div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">Code</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="code"
                                                    id="basic-default-name" placeholder="" required />
                                                <div class="invalid-feedback">Please Enter Coupon Code</div>
                                            </div>
                                        </div>


                                        <div class="row justify-content-end">
                                            <div class="col-sm-10">
                                                <button type="submit" class="btn btn-primary"
                                                    style="margin-left: 995px;">submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


          

            <script>
  // Get form inputs
  const form = document.querySelector('form');
  const nameInput = document.querySelector('input[name="name"]');
  const descInput = document.querySelector('input[name="description"]');
  const percentInput = document.querySelector('input[name="discount_percentage"]');
  const minAmtInput = document.querySelector('input[name="min_amount"]');
  const priceInput = document.querySelector('input[name="discountprice"]');
  const dateInput = document.querySelector('input[name="date"]');
  const codeInput = document.querySelector('input[name="code"]');

  // Add event listener for form submission
  form.addEventListener('submit', function(event) {
    // Prevent default form submission behavior
    event.preventDefault();

    // Set error count to 0
    let errors = 0;

    // Validate name input
    if (nameInput.value === '') {
      nameInput.classList.add('is-invalid');
      nameInput.nextElementSibling.textContent = 'Please enter Coupon Name';
      errors++;
    } else {
      nameInput.classList.remove('is-invalid');
      nameInput.nextElementSibling.textContent = '';
    }

    // Validate description input
    if (descInput.value === '') {
      descInput.classList.add('is-invalid');
      descInput.nextElementSibling.textContent = 'Please enter Coupon Description';
      errors++;
    } else {
      descInput.classList.remove('is-invalid');
      descInput.nextElementSibling.textContent = '';
    }

    // Validate discount percentage input
    if (percentInput.value === '' || isNaN(percentInput.value)) {
      percentInput.classList.add('is-invalid');
      percentInput.nextElementSibling.textContent = 'Please enter a valid Discount Percentage';
      errors++;
    } else {
      percentInput.classList.remove('is-invalid');
      percentInput.nextElementSibling.textContent = '';
    }

    // Validate minimum amount input
    if (minAmtInput.value === '' || isNaN(minAmtInput.value)) {
      minAmtInput.classList.add('is-invalid');
      minAmtInput.nextElementSibling.textContent = 'Please enter a valid Discount Minimum Amount';
      errors++;
    } else {
      minAmtInput.classList.remove('is-invalid');
      minAmtInput.nextElementSibling.textContent = '';
    }

    // Validate discount price input
    if (priceInput.value === '' || isNaN(priceInput.value)) {
      priceInput.classList.add('is-invalid');
      priceInput.nextElementSibling.textContent = 'Please enter a valid Discount Price';
      errors++;
    } else {
      priceInput.classList.remove('is-invalid');
      priceInput.nextElementSibling.textContent = '';
    }

    // Validate date input
    if (dateInput.value === '') {
      dateInput.classList.add('is-invalid');
      dateInput.nextElementSibling.textContent = 'Please Enter Expiry Date';
      errors++;
    } else {
      dateInput.classList.remove('is-invalid');
      dateInput.nextElementSibling.textContent = '';
    }

    // Validate code input
    if (codeInput.value === '') {
      codeInput.classList.add('is-invalid');
      codeInput.nextElementSibling.textContent = 'Please Enter Coupon Code';
      errors++;
    } else {
      codeInput.classList.remove('is-invalid');
      codeInput.nextElementSibling.textContent = '';
    }

    // If there are no errors, submit the form
    if (errors === 0) {
      form.submit();
    }
  });
</script>
